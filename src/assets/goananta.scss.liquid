/*================ Ananta Custom Variables =================*/

$ananta-gray: #212331;
$ananta-green: #3FC35F;
$ananta-light-gray: #99a9b5;
$montserrat: 'Montserrat', sans-serif;


/*================ Ananta Custom ================*/

a.scroll-top-button {
  position: fixed;
  right: 50px;
  bottom: 50px;
  background-color: #06060f;
  color: #99a9b5;
  cursor: pointer;
  height: 50px;
  width: 50px;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.5;
}

#section--social-media {
  width: 100%;
  height: 50px;
  background-color: #393D50;
  border-top: 1px solid #99A9B5;
  border-bottom: 1px solid #99A9B5;

  .social-media__container {
    width: auto;
    height: 100%;
    float: right;

    .social-media__container--flex {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100%;

      i {
        cursor: pointer;
        color: #99a9b5;
        padding: 0 7px;

        &:hover {
          color: #ffffff;
        }
      }
    }
  }
}

.search-header__input, 
.search-bar__input {
  color: $ananta-light-gray;
}

.site-header {
  background-color: #212331;
  border-bottom: 0px;
}

.site-header__icons-wrapper {
  margin-right: 0;
}

.site-header__icons-wrapper {
  input::placeholder {
    color: $ananta-light-gray;
  }
  input::-webkit-input-placeholder {
    color: $ananta-light-gray;
  }
  input::-ms-input-placeholder {
    color: $ananta-light-gray;
  }
  input::-moz-placeholder {
    color: $ananta-light-gray;
  }  

  button,
  a {
    color: #eee;
  }
}

nav.mobile-nav-wrapper {
  z-index: 99;
}

.site-nav {
  li {
    a {
      color: $ananta-light-gray;
      font-weight: 700;
      text-transform: uppercase;
    }

    &.site-nav--active {
      border: 2px solid white;
    }
  }
}

#contact-page {
  
  .section-header {
    h1 {
      margin-top: 17.5px;
    }
  }

  #address-container {
    padding: 30px;
    background-color: #F4F6F7;
    border: 1px solid #E8E9EB;
  }

  #contact_form {
    input,
    textarea {
      background-color: #F4F6F7;
    }
  }  
}

.google-maps {
  position: relative;
  padding-bottom: 100%; // This is the aspect ratio
  height: 0;
  overflow: hidden;
}
.google-maps iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100% !important;
  height: 100% !important;
}